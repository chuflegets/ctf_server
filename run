#!/bin/bash
venv_dir=$PWD/venv
activation_path=$PWD/venv/bin/activate
requirements=$PWD/requirements.txt
if [[ ! -d $virtualenv_dir ]]
then
    python3 -m virtualenv $venv_dir
    source $activation_path
    pip install -r $requirements
    deactivate
fi

source $activation_path
ctf --host 127.0.0.1 --port 1337
deactivate
